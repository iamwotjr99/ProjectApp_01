<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sander_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/friend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="#333333"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toStartOf="@id/sander_profile"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/sender_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_name"
        android:layout_marginRight="16dp"
        android:padding="12dp"
        android:maxWidth="350dp"
        android:background="@drawable/chat_my_msgbox"
        android:textColor="#333333"
        android:src="@drawable/friend"
        app:layout_constraintEnd_toStartOf="@id/sander_profile"
        app:layout_constraintTop_toBottomOf="@id/sender_name"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/sender_pic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:35"
        android:textSize="12sp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@id/sender_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/sender_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:background="@drawable/chat_my_msgbox"
        android:maxWidth="250dp"
        android:padding="12dp"
        android:text="Hello android"
        android:textColor="#333333"
        app:layout_constraintEnd_toStartOf="@id/sander_profile"
        app:layout_constraintTop_toBottomOf="@id/sender_name"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/sender_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="44dp"
        android:text="13:35"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sender_msg"
        app:layout_constraintRight_toLeftOf="@id/sender_msg"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>