<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="채팅방 이름 설정"
        android:textColor="@color/black"
        android:textSize="20dp"></TextView>

    <ImageView
        android:id="@+id/imageView_welcome"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView_roomName"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/img_welcome"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_roomName"
        android:layout_below="@+id/imageView_welcome"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="50dp"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="채팅방 이름을 설정해주세요!"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center_horizontal"></TextView>

        <EditText
            android:id="@+id/editText_roomName_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:hint="채팅방 이름"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"></EditText>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton_roomName_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/linear_roomName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        android:src="@drawable/btn_plus"></ImageButton>

</RelativeLayout>