<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_guideText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="친구추가 하기">

    </TextView>

    <EditText
        android:id="@+id/et_friendID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:singleLine="true"
        android:imeOptions="actionDone"
        app:layout_constraintTop_toBottomOf="@id/tv_guideText"
        android:layout_marginTop="200dp"
        android:hint="친구 아이디 번호"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_friendID"
        android:text="친구의 아이디 번호를 입력하세요"
        android:layout_margin="10dp">

    </TextView>

    <TextView
        android:id="@+id/tv_leftID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_friendID"
        android:text="나의 아이디 번호: "
        android:textColor="@color/black"
        android:layout_margin="35dp">

    </TextView>
    <TextView
        android:id="@+id/tv_mUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_leftID"
        app:layout_constraintTop_toBottomOf="@id/et_friendID"
        android:text="나의 아이디 번호"
        android:textColor="@color/blue_900"
        android:layout_marginTop="35dp">

    </TextView>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_friendID"
        android:layout_marginTop="100dp"
        android:text="추가">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>