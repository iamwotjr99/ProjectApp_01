<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="지출 내용"
        android:textColor="@color/black"
        android:textSize="20dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_cost"
        android:layout_below="@+id/textView_cost"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="15dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지출 비용"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"></TextView>

        <EditText
            android:id="@+id/editText_cost_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="right"
            android:hint="지출 비용"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  원"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_memo"
        android:layout_below="@+id/linear_cost"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="15dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메모"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="2"></TextView>


        <EditText
            android:id="@+id/editText_memo_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"></EditText>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_save"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/linear_memo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:src="@drawable/btn_plus"
        android:scaleType="centerInside"></ImageButton>

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/linear_memo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF"
        android:src="@drawable/btn_delete"
        android:scaleType="centerInside"></ImageButton>

</RelativeLayout>